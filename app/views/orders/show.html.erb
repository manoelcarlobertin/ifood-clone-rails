<!-- Container principal -->
<div class="container mx-auto p-4">
  <!-- Mensagem de notificação -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <!-- Detalhes do pedido -->
  <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <%= render @order %>
  </div>

  <!-- Ações do pedido -->
  <div class="flex items-center space-x-4">
    <%= link_to edit_order_path(@order), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" do %>
      <i class="fas fa-edit mr-2"></i> Editar Pedido
    <% end %>

    <%= link_to orders_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" do %>
      <i class="fas fa-arrow-left mr-2"></i> Voltar
    <% end %>

    <%= button_to @order,
        method: :delete,
        class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
        data: { confirm: "Tem certeza que deseja excluir este pedido?" } do %>
      <i class="fas fa-trash mr-2"></i> Excluir Pedido
    <% end %>
  </div>
</div>