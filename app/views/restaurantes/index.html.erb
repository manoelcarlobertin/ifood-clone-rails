<!-- Flash message for notifications -->
<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
      <!-- PaginaÃ§Ã£o -->
    <h1>Restaurantes <%= paginate @restaurantes, theme: 'bootstrap4', class: 'pagination-sm' if @restaurantes.present? %></h1>
    <%= link_to new_restaurante_path, class: "btn", style: "background-color: #00a4ef; color: white;" do %>
      <i class="fas fa-plus"></i> Novo Restaurante
    <% end %>
  </div>

  <div class="row" id="restaurantes">
    <% @restaurantes.each do |restaurante| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="border-color: #7fba00;">
          <div class="card-body">
            <%= render restaurante %>
            <%= link_to restaurante, class: "btn btn-sm mt-2", style: "background-color: #ffb900; color: white;" do %>
              <i class="fas fa-eye"></i> Ver detalhes
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
