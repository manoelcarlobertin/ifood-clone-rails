<!-- Product Categories Index -->
<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Product Categories" %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Product Categories</h1>
    <%= link_to new_product_category_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> New Category
    <% end %>
  </div>

  <div class="row" id="product_categories">
    <% @product_categories.each do |product_category| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <%= render product_category %>
            <div class="mt-3 text-center">
              <%= link_to product_category, class: "btn btn-outline-primary btn-sm" do %>
                <i class="fas fa-eye"></i> View Details
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @product_categories.empty? %>
    <div class="alert alert-info text-center">
      <p class="mb-0">No product categories found.</p>
    </div>
  <% end %>
</div>